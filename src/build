# !!! UPDATE version (static/config.xml)

rm -r app


cordova create app nl.pastgoed.deelnemerApp "Stadjerspas Scanner"


cd app


rm -r www

rm config.xml


ln -s ../static/ www
ln -s ../static/res/ res
ln -s ../static/config.xml config.xml


cordova platform add windows -- --appx=8.1-phone
cordova build windows --phone
cd ..

open platforms/ios/Stadjerspas\ Groningen.xcodeproj/


#in XCODE

# select actual existing device as target
